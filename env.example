# Configurações do Banco de Dados
DB_HOST=localhost
DB_NAME=denuncias
DB_USER=seu_usuario_mysql
DB_PASS=sua_senha_mysql_segura
DB_CHARSET=utf8mb4

# Configurações da Aplicação
APP_NAME="Canal de Denúncias - HSFA"
APP_URL=http://localhost
APP_ENV=development
APP_DEBUG=true

# Configurações de Segurança
SESSION_SECURE=false
SESSION_TIMEOUT=1800
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=1800

# Configurações de Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=jpg,jpeg,png,pdf
UPLOAD_PATH=public/uploads

# Configurações de Email
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=seu_email@dominio.com
MAIL_PASSWORD=sua_senha_email
MAIL_FROM_ADDRESS=noreply@hsfa.com.br
MAIL_FROM_NAME="Canal de Denúncias HSFA"

# Configurações de Cache
CACHE_DRIVER=file
CACHE_TTL=3600

# Redis (se CACHE_DRIVER=redis)
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# Memcached (se CACHE_DRIVER=memcached)
MEMCACHED_HOST=127.0.0.1
MEMCACHED_PORT=11211

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_ATTEMPTS=60
RATE_LIMIT_WINDOW=60

# API Configuration
API_ENABLED=true
API_RATE_LIMIT=100
JWT_SECRET=gere_uma_chave_jwt_aleatoria_aqui
APP_VERSION=3.0.0
